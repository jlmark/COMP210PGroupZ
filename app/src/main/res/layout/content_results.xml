<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.country.Results"
    tools:showIn="@layout/activity_results">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headingLayout"
        android:layout_marginBottom="@dimen/resultsMarginSpacing">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/countryHeading"
            android:id="@+id/countryHeading"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/headingSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/frequencyHeading"
            android:id="@+id/frequencyHeading"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/headingSize" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstCountryLayout"
        android:layout_marginTop="@dimen/resultsMarginSpacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/firstPosition"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/firstCountry"
            android:layout_weight="1 "
            android:gravity="center"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/firstFrequency"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/resultTextSize" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondCountryLayout"
        android:layout_marginTop="@dimen/resultsMarginSpacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/secondPosition"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/secondCountry"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/secondFrequency"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/resultTextSize" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thirdCountryLayout"
        android:layout_marginTop="@dimen/resultsMarginSpacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/thirdPosition"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/thirdCountry"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/thirdFrequency"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/resultTextSize" />
    </LinearLayout>
</LinearLayout>
